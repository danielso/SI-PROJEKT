{% extends 'base.html.twig' %}

{% block title %}Nowe zadanie{% endblock %}

{% block body %}
    <div class="container">
        <h1>Dodaj nowe zadanie</h1>

        {{ form_start(form) }}

        {{ form_row(form.title) }}
        {{ form_row(form.content) }}
        {{ form_row(form.category) }}
        {{ form_row(form.newCategory) }}
        {{ form_row(form.tags) }}
        {{ form_row(form.isDone) }}


        {{ form_end(form) }}

        <a href="{{ path('app_to_do_index') }}" class="btn btn-secondary">Anuluj</a>


        {{ form_end(form) }}
    </div>
{% endblock %}
