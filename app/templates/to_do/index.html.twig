{% extends 'base.html.twig' %}

{% block title %}Twoja lista do zrobienia{% endblock %}

{% block body %}
    <h1>Towoja lista do zrobienia</h1>

    <div style="margin-bottom: 1rem;">
        <a href="{{ path('home') }}" class="back-button" style="padding: 0.5rem 1rem; background-color: #4CAF50; color: white; border-radius: 5px; text-decoration: none; margin-left: 1rem;">â† WrÃ³Ä‡ do strony gÅ‚Ã³wnej</a>
        <a href="{{ path('app_to_do_new') }}" style="padding: 0.5rem 1rem; background-color: #4CAF50; color: white; border-radius: 5px; text-decoration: none; margin-left: 1rem;">â• Nowe zadanie</a>
        <a href="{{ path('category_index') }}" style="padding: 0.5rem 1rem; background-color: #4CAF50; color: white; border-radius: 5px; text-decoration: none; margin-left: 1rem;">ğŸ“ ZarzÄ…dzaj kategoriami</a>
        <a href="{{ path('tag_index') }}" style="padding: 0.5rem 1rem; background-color: #4CAF50; color: white; border-radius: 5px; text-decoration: none; margin-left: 1rem;">ğŸ·ï¸ ZarzÄ…dzaj tagami</a>

    </div>

    <form method="get" action="{{ path('app_to_do_index') }}" style="margin-bottom: 1rem;">
        <label for="search">Wyszukaj zadania:</label>
        <input type="text" id="search" name="search" value="{{ searchTerm }}" placeholder="Wpisz tytuÅ‚ lub treÅ›Ä‡ zadania">
        <button type="submit">Szukaj</button>
    </form>


    <form method="get" action="{{ path('app_to_do_index') }}" style="margin-bottom: 1rem;">
        <label for="category">Filtruj wedÅ‚ug kategorii:</label>
        <select name="category" id="category" onchange="this.form.submit()">
            <option value="">Wszystkie</option>
            {% for category in categories %}
                <option value="{{ category.id }}" {% if selectedCategory == category.id %}selected{% endif %}>{{ category.name }}</option>
            {% endfor %}
        </select>
    </form>

    <form method="get" action="{{ path('app_to_do_index') }}" style="margin-bottom: 1rem;">
        <label for="tag">Filtruj wedÅ‚ug tagÃ³w:</label>
        <select name="tag" id="tag" onchange="this.form.submit()">
            <option value="">Wszystkie</option>
            {% for tag in tags %}
                <option value="{{ tag.id }}" {% if selectedTag == tag.id %}selected{% endif %}>{{ tag.name }}</option>
            {% endfor %}
        </select>
    </form>


    {% for task in to_do %}
        <div style="border: 1px solid #ccc; border-radius: 8px; padding: 1rem; margin-bottom: 1rem;">
            <h3 style="margin-top: 0;">{{ task.title }}</h3>
            {% if task.content %}
                <p><strong>TreÅ›Ä‡:</strong> {{ task.content|markdown_to_html }}</p>
            {% endif %}

            <p><strong>Status:</strong> {{ task.isDone ? 'Zrobione' : 'NieukoÅ„czone' }}</p>

            {% if task.category %}
                <p><strong>Kategoria:</strong> {{ task.category.name }}</p>
            {% else %}
                <p><strong>Kategoria:</strong> <em>Brak</em></p>
            {% endif %}
            <p>Tagi:
                {% if task.tags is empty %}
                    <em>Brak</em>
                {% else %}
                    {% for tag in task.tags %}
                        <span style="display: inline-block; background-color: #e0e0e0; padding: 0.2rem 0.5rem; margin-right: 0.3rem; border-radius: 5px;">
                                    {{ tag.name }}
                                </span>
                    {% endfor %}
                {% endif %}
            </p>

            <p><strong>Data utworzenia:</strong> {{ task.createdAt|date('Y-m-d H:i') }}</p>



            <div style="margin-top: 0.5rem;">
                <a href="{{ path('app_to_do_edit', {'id': task.id}) }}" style="margin-right: 0.5rem;">âœï¸ Edytuj</a>
                <form method="post" action="{{ path('app_to_do_delete', {'id': task.id}) }}" style="display:inline;" onsubmit="return confirm('JesteÅ› pewien?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                    <button style="background: none; border: none; cursor: pointer;">ğŸ—‘ UsuÅ„</button>
                </form>
            </div>

            {# GdzieÅ› w widoku, np. w to_do/index.html.twig #}

            {% if task.shareToken %}
                <a href="{{ path('app_to_do_share', {'token': task.shareToken}) }}">UdostÄ™pnij zadanie</a>
            {% else %}
                <p>Brak tokena do udostÄ™pnienia.</p>
            {% endif %}

        </div>
    {% else %}
        <p>Brak zadaÅ„ do wyÅ›wietlenia.</p>
    {% endfor %}


{% endblock %}
